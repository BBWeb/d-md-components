.mdl-textfield
  >textarea
    overflow                                hidden
    resize                                  none

  .mdl-textfield--floating-label.is-invalid .mdl-textfield__label
    color                                   mdl-error

  .mdl-textfield__error
    display                                 block
    
  &__helper
    position                                absolute
    display                                 block
    color                                   rgba(97,97,97,0.9)
    font-size                               12px
    margin-top                              3px

  :invalid
    box-shadow                              none

  textarea
    vertical-align                          top

  &.disabled
    .mdl-textfield__label:after
      display                               none
    
    .mdl-textfield__input
      color                                 mdl-light-full
